@model TestGeneratorMvc.Models.LoginModel

@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>

@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "col-md-6 form-horizontal" })){
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, null, htmlAttributes: new { @class = "text-danger"})

    <div class="form-group">
        @Html.LabelFor(m => m.UserName)
        @Html.TextBoxFor(m => m.UserName, htmlAttributes: new { @class = "form-control", @placeholder = "Enter your user name" })
        @Html.ValidationMessageFor(m => m.UserName)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, htmlAttributes: new { @class = "form-control", @placeholder = "Enter your password" })
        @Html.ValidationMessageFor(m => m.Password)
     </div>
     <div class="form-group checkbox">
        <label for="RemeberMe">
            @Html.CheckBoxFor(m => m.RememberMe) 
            Remember me?
        </label>
      </div>
     <div class="form-group">
        <input type="submit"  class="btn btn-success pull-right" value="Log in" />
     </div>
        @Html.ActionLink("if you don't have an account.", "Register", "Account") 
}

@section Scripts {
    @Scripts.Render("~/bundles/main")
}
