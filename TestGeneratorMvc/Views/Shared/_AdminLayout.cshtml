<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/bootstrap")
    @Scripts.Render("~/bundles/main")
</head>
<body ng-app="adminApplication">
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Admin area</a>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <li>@Html.ActionLink("Tests", "Tests")</li>
            <li>@Html.ActionLink("Test exports", "TestExports")</li>
            <li>@Html.ActionLink("Questions", "Questions")</li>
            @if (User.IsInRole("Admin"))
              {
                <li>@Html.ActionLink("Users", "Users")</li>
              }
            </ul>
          </div>
      </div>
    </div>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
          <ul class="nav nav-sidebar">
			<li class="text-center">@Html.ActionLink("Tests", "Tests")</li>
            <li>
				@Html.ActionLink("Add test", "AddTest")
			</li>
          </ul>
          <ul class="nav nav-sidebar">
			<li class="text-center">@Html.ActionLink("Test exports", "TestExports")</li>
            <li>
				@Html.ActionLink("Add test export", "AddTestExport")
			</li>
              </ul>
		<ul class="nav nav-sidebar">
			<li class="text-center">@Html.ActionLink("Questions", "Questions")</li>
            <li>
				@Html.ActionLink("Add question", "AddQuestion")
			</li>
          </ul>
        @if (User.IsInRole("Admin"))
              {
                <ul class="nav nav-sidebar">
                    <li class="text-center">@Html.ActionLink("Users", "Users")</li>
                </ul>
              }
        </div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
            @RenderBody()
        </div>
    </div>
</div>
    @Scripts.Render("~/Scripts/adminApp")
    @RenderSection("scripts", required: false)
</body>
</html>
