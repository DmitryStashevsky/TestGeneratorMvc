@model TestGeneratorMvc.Models.LocalPasswordModel

<h3>Change password</h3>

@using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "col-md-6 form-horizontal" })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(null, htmlAttributes: new { @class = "text-danger"})

    <div class="form-group">
        @Html.LabelFor(m => m.OldPassword)
        @Html.PasswordFor(m => m.OldPassword, htmlAttributes: new { @class = "form-control", @placeholder = "Enter your old password" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NewPassword)
        @Html.PasswordFor(m => m.NewPassword, htmlAttributes: new { @class = "form-control", @placeholder = "Enter your new password" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword)
        @Html.PasswordFor(m => m.ConfirmPassword, htmlAttributes: new { @class = "form-control", @placeholder = "Confgirm your new password" })
    </div>
    <div class="form-group">
        <input type="submit" value="Change password" class="btn btn-success pull-right"/>
    </div>
}
